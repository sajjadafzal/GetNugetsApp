<Window
    x:Class="GetNugets.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GetNugets.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainView"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Command="{Binding BrowseNugetFolderCommand}" Header="Select Nuget Folder" />
                </MenuItem>
                <MenuItem Header="Actions">
                    <MenuItem Command="{Binding SaveDownloadPackageListCommand}" Header="Save Downloaded Packages List" />
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Purple"
                    Text="Nugets Output Folder: " />
                <TextBlock
                    Margin="5,0,0,0"
                    Padding="10"
                    VerticalAlignment="Center"
                    Background="Purple"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding NugetFolder}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock
                Margin="5,2,2,2"
                Background="LightGray"
                Text="{Binding Status}" />
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
